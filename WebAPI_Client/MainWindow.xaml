<Window x:Class="WebAPI_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebAPI_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="People" Margin="15" FontWeight="Bold"/>

        <ListBox Grid.Row="1" x:Name="PeopleListBox" Margin="15, 0, 15, 15" SelectionMode="Single" SelectionChanged="PeopleListBox_SelectionChanged"/>

        <Button Grid.Row="2" x:Name="AddPersonButton" Content="Add person" Width="150" HorizontalAlignment="Right" Margin="15, 0, 15, 15" Click="AddPersonButton_Click"/>
    </Grid>
</Window>
